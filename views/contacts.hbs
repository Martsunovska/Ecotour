<form action="" method="POST" class="form-horizontal" role="form">
    <div class="form-group">
        <legend class="col-md-3 col-md-offset-2">Регистрация участника</legend>
    </div>

    <div class="form-group">
        <label for="username" class="control-label col-md-3 col-md-offset-2">
            Как к Вам обращаться?
        </label>
        <div class="form-group col-md-4">
            <select class="form-control">
                <option>Mr</option>
                <option>Ms</option>
                <option>Mrs</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="name" class="control-label col-md-3 col-md-offset-2">
            Фамилия и имя
        </label>
        <div class="form-group col-md-4">
            <input class="form-control" type="text" placeholder="Иванов Иван" id="name" required="required">
        </div>
    </div>

    <div class="form-group">
        <label for="company" class="control-label col-md-3 col-md-offset-2">
            Компания (учебное заведение)
        </label>
        <div class="form-group col-md-4">
            <input class="form-control" type="text" placeholder="Google inc" id="company" required="required">
        </div>
    </div>

    <div class="form-group">
        <label for="email" class="control-label col-md-3 col-md-offset-2">
            E-mail
        </label>
        <div class="form-group col-md-4">
            <div class="input-group">
                <div class="input-group-addon">
                    <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                </div>
                <input type="email" name="email" id="email" class="form-control" placeholder="demo@email.com" required="required">
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="job" class="control-label col-md-3 col-md-offset-2">
            Должность
        </label>
        <div class="form-group col-md-4">
            <input class="form-control" type="text" placeholder="зам. директора" id="job" required="required">
        </div>
    </div>

    <div class="form-group">
        <label for="city" class="control-label col-md-3 col-md-offset-2">
            Город
        </label>
        <div class="form-group col-md-4">
            <div class="input-group">
                <div class="input-group-addon">
                    <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                </div>
                <input type="text" name="city" id="city" class="form-control" placeholder="Киев" required="required">
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="question" class="control-label col-md-3 col-md-offset-2">
            Как нам сделать конференцию интересней?
        </label>
        <div class="form-group col-md-4">
            <textarea name="question" id="question" class="form-control" rows="6" required="required"></textarea>
        </div>
    </div>



    <div class="form-group">
        <div class="col-sm-6 col-sm-offset-6">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>